{
    "compilerOptions": {
        "lib": ["es6"],
        "removeComments": true,
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowJs": false,
        "strict": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "test/**/*.ts*"]
}
