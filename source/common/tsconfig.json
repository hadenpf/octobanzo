    "compilerOptions": {
        "outDir": "build",
        "target": "es5",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
